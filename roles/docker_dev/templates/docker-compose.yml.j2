# Docker Compose configuration for Coolify development environment
# Generated by Ansible docker_dev role

networks:
  {{ docker_dev_network_name }}:
    driver: bridge
    ipam:
      config:
        - subnet: {{ docker_dev_network_subnet }}
          gateway: {{ docker_dev_network_gateway }}

services:
{% for container in docker_dev_containers %}
  {{ container.name }}:
    build:
      context: .
      dockerfile: Dockerfile
    image: {{ docker_dev_image_name }}:latest
    container_name: {{ docker_dev_name_prefix }}-{{ container.name }}
    hostname: {{ container.hostname }}
    privileged: true
    cgroup: host
    volumes:
      - /sys/fs/cgroup:/sys/fs/cgroup:rw
      - {{ docker_dev_logs_path }}/{{ container.name }}:/var/log
      - {{ docker_dev_ssh_keys_path | expanduser }}/{{ container.hostname }}.pub:/tmp/authorized_keys.pub:ro
      # Docker-in-Docker: container runs its own Docker daemon with vfs storage driver
    command: >
      /bin/bash -c "cp /tmp/authorized_keys.pub /root/.ssh/authorized_keys &&
                    chmod 600 /root/.ssh/authorized_keys &&
                    chown root:root /root/.ssh/authorized_keys &&
                    exec /lib/systemd/systemd"
    networks:
      {{ docker_dev_network_name }}:
        ipv4_address: {{ container.ip }}
{% if 'controller' in container.labels %}
    ports:
      - "8000:8000"   # Coolify UI
      - "6001:6001"   # Coolify WebSocket
      - "6002:6002"   # Coolify Realtime
      - "2210:22"     # SSH
{% else %}
    ports:
      # SSH port mapping: 22XX where XX is last octet of IP
      - "22{{ container.ip.split('.')[-1] }}:22"
{% endif %}
    deploy:
      resources:
        limits:
          cpus: '{{ container.resources.cpu | default(docker_dev_cpu_limit) }}'
          memory: {{ container.resources.memory | default(docker_dev_memory_limit) }}
    labels:
{% for label in container.labels %}
      - "coolify.role={{ label }}"
{% endfor %}
      - "coolify.platform=docker"
      - "coolify.hostname={{ container.hostname }}"
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "systemctl", "is-active", "ssh.socket"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 60s

{% endfor %}
